{
  "name": "dehli-mirch-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @dehlimirch/site dev",
    "dev:site": "pnpm --filter @dehlimirch/site dev",
    "dev:admin": "pnpm --filter @dehlimirch/admin dev",
    "build": "pnpm --filter @dehlimirch/site build && pnpm --filter @dehlimirch/admin build",
    "build:site": "pnpm --filter @dehlimirch/site build",
    "build:admin": "pnpm --filter @dehlimirch/admin build",
    "start": "pnpm --filter @dehlimirch/site start",
    "start:site": "pnpm --filter @dehlimirch/site start",
    "start:admin": "pnpm --filter @dehlimirch/admin start",
    "lint": "pnpm --filter @dehlimirch/site lint && pnpm --filter @dehlimirch/admin lint",
    "lint:site": "pnpm --filter @dehlimirch/site lint",
    "lint:admin": "pnpm --filter @dehlimirch/admin lint",
    "init-schemas": "tsx scripts/init-relationship-schemas.ts",
    "clean": "pnpm -r exec rm -rf node_modules && rm -rf node_modules",
    "install:all": "pnpm install"
  },
  "dependencies": {},
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/formidable": "^3.4.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.35.0",
    "eslint-config-next": "15.5.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.19.2",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5"
  }
}
